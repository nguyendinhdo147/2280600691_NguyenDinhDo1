@using _2280600691_NguyenDinhDo.Models
@model IEnumerable<Category>

<h2>Categories List</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Display" asp-route-id="@category.Id" class="btn btn-info">View</a>
                        <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
<a asp-action="Add" class="btn btn-success">Add New Category</a>
