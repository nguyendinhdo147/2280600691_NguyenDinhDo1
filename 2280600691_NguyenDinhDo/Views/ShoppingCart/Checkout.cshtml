@model Order 

<div class="container my-5">
    <h2 class="text-center text-primary mb-4 fw-bold">Checkout</h2>

    <!-- Display validation errors -->
    @if (!ViewData.ModelState.IsValid)
    {
            <div class="alert alert-danger">
                <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                            <li>@error.ErrorMessage</li>
                }
                </ul>
            </div>
    }

    <form asp-action="Checkout" method="post" class="shadow p-4 rounded bg-light">
        <!-- Shipping Address -->
        <div class="form-group mb-4">
            <label asp-for="ShippingAddress" class="form-label fw-bold text-secondary">Shipping Address</label>
            <input asp-for="ShippingAddress" class="form-control border-primary shadow-sm" placeholder="Enter your shipping address..." required />
            <small class="text-muted">* Required</small>
            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
        </div>

        <!-- Notes -->
        <div class="form-group mb-4">
            <label asp-for="Notes" class="form-label fw-bold text-secondary">Additional Notes</label>
            <textarea asp-for="Notes" class="form-control border-primary shadow-sm" rows="4" placeholder="Enter any specific instructions..."></textarea>
            <small class="text-muted">Optional</small>
        </div>

        <!-- User ID -->
        <div class="form-group mb-4">
            <label asp-for="UserId" class="form-label fw-bold text-secondary">User ID</label>
            <input asp-for="UserId" class="form-control border-primary shadow-sm" placeholder="Enter your user ID..." required />
            <small class="text-muted">* Required</small>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <!-- Order Details -->
        <div class="form-group mb-4">
            <label asp-for="OrderDetails" class="form-label fw-bold text-secondary">Order Details</label>
            <textarea asp-for="OrderDetails" class="form-control border-primary shadow-sm" rows="4" placeholder="Enter your order details..." required></textarea>
            <small class="text-muted">* Required</small>
            <span asp-validation-for="OrderDetails" class="text-danger"></span>
        </div>

       

        <!-- Submit Button -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary px-4 py-2 shadow rounded-pill">
                <i class="bi bi-check-circle me-2"></i> Place Order
            </button>
        </div>
    </form>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
